package com.controller;

import java.io.IOException;

import com.dao.FeedbackImpl;
import com.model.Feedback;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

@WebServlet("/feedback")
public class FeedbackController extends HttpServlet{
	FeedbackImpl fd=new FeedbackImpl();
	boolean b;
	
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
	}
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String action=req.getParameter("action");
		String c_email=req.getParameter("c_email");
		String review=req.getParameter("review");
		String advise=req.getParameter("advise");
		int ranks=Integer.parseInt("rank");
		
		if(action!=null && action.equals("add")) {
			b=fd.add_feedback(new Feedback(c_email, review, advise, ranks));
			if(b) {
				resp.sendRedirect("success.jsp");
			}else {
				resp.sendRedirect("failed.jsp");
			}
		}
	}

}
